</head>
<body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= @page_title || "Nasza ksiÄ™garnia" %>
    </div>
    <div id="columns">
      <div id="side">
        <% unless @cart.nil? %>
        <div id="cart">
          <%= render @cart %>
        </div>
        <%end%>
      </div>
        <ul>
          <li><%= link_to 'link 1', '#' %></li>
          <li><%= link_to 'link 2', '#' %></li>
          <li><%= link_to 'link 3', '#' %></li>
          <li><%= link_to 'link 4', '#' %></li>
        </ul>
      </div>
      <div id="main">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
